/* Confirm Dialog */

@import "~/.cache/wal/colors-rofi-dark.rasi"
@import "~/.config/rofi/shared/font.rasi"

* {
    background-color:       @background;
    text-color:             @foreground;
}

window {
    width:      			230px;
    padding:    			25px;
    border:					1px;
    border-radius:          0px;
    border-color:           @border;
    location:               center;
    y-offset:               -2em;
}

entry {
    expand: 				true;
    text-color:				@border;
}
